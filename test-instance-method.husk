struct Point {
    x: int,
    y: int,
}

impl Point {
    fn new(x: int, y: int) -> Point {
        Point { x: x, y: y }
    }
    
    fn distance(self) -> float {
        let dx = self.x as float;
        let dy = self.y as float;
        (dx * dx + dy * dy) as float
    }
}

fn main() {
    let p = Point::new(3, 4);
    let d = p.distance();
    println(format!("Distance: {}", d));
}