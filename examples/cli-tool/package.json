{
  "name": "husk-cli-example",
  "version": "1.0.0",
  "description": "Example CLI tool built with Husk demonstrating Node.js API usage",
  "main": "dist/main.js",
  "bin": {
    "husk-cli": "./dist/main.js"
  },
  "scripts": {
    "build": "husk build main.husk --target node-esm --output dist/main.js",
    "build:cjs": "husk build main.husk --target node-cjs --output dist/main.cjs",
    "dev": "husk build main.husk --target node-esm --output dist/main.js --watch",
    "start": "node dist/main.js",
    "test": "node dist/main.js process ./test-input ./test-output --verbose"
  },
  "keywords": [
    "husk",
    "cli",
    "file-processing",
    "node.js",
    "javascript-interop"
  ],
  "author": "Husk Language Examples",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/husk-lang/examples.git",
    "directory": "cli-tool"
  }
}