{
  "name": "husk-vscode",
  "displayName": "Husk Language Support",
  "description": "Language support for the Husk programming language",
  "version": "0.1.0",
  "publisher": "husk-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/husk-lang/husk"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "husk",
    "programming language",
    "language server"
  ],
  "activationEvents": [
    "onLanguage:husk"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "husk",
        "aliases": [
          "Husk",
          "husk"
        ],
        "extensions": [
          ".hk",
          ".husk"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/husk-light.svg",
          "dark": "./icons/husk-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "husk",
        "scopeName": "source.husk",
        "path": "./syntaxes/husk.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Husk",
      "properties": {
        "husk.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the husk-lsp binary. If empty, uses the bundled server."
        },
        "husk.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Husk language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.x",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
