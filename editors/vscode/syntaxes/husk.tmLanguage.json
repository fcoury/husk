{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Husk",
  "scopeName": "source.husk",
  "patterns": [
    { "include": "#comments" },
    { "include": "#js-block" },
    { "include": "#hx-block" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.husk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.husk",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "js-block": {
      "name": "meta.embedded.block.js.husk",
      "begin": "\\b(js)\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "keyword.control.js.husk" },
        "2": { "name": "punctuation.section.block.begin.husk" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.block.end.husk" }
      },
      "contentName": "meta.embedded.block.javascript",
      "patterns": [
        { "include": "source.js" }
      ]
    },
    "hx-block": {
      "name": "meta.embedded.block.hx.husk",
      "begin": "\\b(hx)\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "keyword.control.hx.husk" },
        "2": { "name": "punctuation.section.block.begin.husk" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.block.end.husk" }
      },
      "patterns": [
        { "include": "#hx-content" }
      ]
    },
    "hx-content": {
      "patterns": [
        { "include": "#hx-expression" },
        { "include": "#hx-element-self-closing" },
        { "include": "#hx-element-open" },
        { "include": "#hx-element-close" },
        { "include": "#hx-text" }
      ]
    },
    "hx-element-self-closing": {
      "name": "meta.tag.self-closing.hx.husk",
      "begin": "(<)\\s*([A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9]*)(?=[^>]*/>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.hx" },
        "2": { "name": "entity.name.tag.hx" }
      },
      "end": "/>",
      "endCaptures": {
        "0": { "name": "punctuation.definition.tag.end.hx" }
      },
      "patterns": [
        { "include": "#hx-attribute" }
      ]
    },
    "hx-element-open": {
      "name": "meta.tag.open.hx.husk",
      "begin": "(<)\\s*([A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9]*)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.hx" },
        "2": { "name": "entity.name.tag.hx" }
      },
      "end": ">",
      "endCaptures": {
        "0": { "name": "punctuation.definition.tag.end.hx" }
      },
      "patterns": [
        { "include": "#hx-attribute" }
      ]
    },
    "hx-element-close": {
      "name": "meta.tag.close.hx.husk",
      "match": "(</)\\s*([A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9]*)\\s*(>)",
      "captures": {
        "1": { "name": "punctuation.definition.tag.begin.hx" },
        "2": { "name": "entity.name.tag.hx" },
        "3": { "name": "punctuation.definition.tag.end.hx" }
      }
    },
    "hx-attribute": {
      "patterns": [
        {
          "name": "meta.attribute.expression.hx",
          "begin": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.hx" },
            "2": { "name": "punctuation.separator.key-value.hx" },
            "3": { "name": "punctuation.section.embedded.begin.hx" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.hx" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        },
        {
          "name": "meta.attribute.string.hx",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.other.attribute-name.hx" },
            "2": { "name": "punctuation.separator.key-value.hx" },
            "3": { "name": "string.quoted.double.hx" }
          }
        },
        {
          "name": "entity.other.attribute-name.hx",
          "match": "[a-zA-Z_][a-zA-Z0-9_-]*"
        }
      ]
    },
    "hx-expression": {
      "name": "meta.embedded.expression.hx",
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.embedded.begin.hx" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.embedded.end.hx" }
      },
      "patterns": [
        { "include": "$self" }
      ]
    },
    "hx-text": {
      "name": "string.unquoted.hx",
      "match": "[^<>{}]+"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.husk",
          "match": "\\b(if|else|while|match|return|break|continue|for)\\b"
        },
        {
          "name": "keyword.other.husk",
          "match": "\\b(as|pub|use|mod|extern)\\b"
        },
        {
          "name": "storage.type.husk",
          "match": "\\b(fn|let|mut|struct|enum|type|trait|impl)\\b"
        },
        {
          "name": "constant.language.boolean.husk",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.self.husk",
          "match": "\\b(self|Self)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.husk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.husk",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.husk",
              "match": "\\{[^}]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.husk",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.husk",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.husk",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.husk",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.husk",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.husk",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.husk",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.namespace.husk",
          "match": "::"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.husk",
          "match": "\\b(i32|i64|u32|u64|f32|f64|bool|String|str|JsValue)\\b"
        },
        {
          "name": "entity.name.type.husk",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.husk",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.husk",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
