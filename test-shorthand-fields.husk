struct Point {
    x: int,
    y: int,
}

struct Person {
    name: string,
    age: int,
}

enum Status {
    Working { task: string, progress: int },
    Done { result: string },
}

fn main() {
    let x = 10;
    let y = 20;
    
    // Should work: shorthand field syntax
    let p1 = Point { x, y };
    
    // Regular syntax still works
    let p2 = Point { x: 30, y: 40 };
    
    let name = "Alice";
    let age = 25;
    let person = Person { name, age };
    
    // Mixed shorthand and regular
    let p3 = Point { x, y: 50 };
    
    // Enum variant with shorthand
    let task = "coding";
    let progress = 75;
    let status = Status::Working { task, progress };
    
    println(format!("Point1: ({}, {})", p1.x, p1.y));
    println(format!("Person: {} is {} years old", person.name, person.age));
}