---
const resources = [
  {
    title: 'Documentation',
    description: 'Comprehensive guides, API reference, and tutorials to get you started.',
    href: '/docs',
    icon: 'book',
    cta: 'Read the Docs',
    available: true,
  },
  {
    title: 'GitHub',
    description: 'View the source code, report issues, and contribute to Husk.',
    href: 'https://github.com/fcoury/husk',
    icon: 'github',
    cta: 'View Repository',
    available: true,
    external: true,
  },
  {
    title: 'Discord',
    description: 'Join the community, ask questions, and connect with other Husk developers.',
    href: '#',
    icon: 'discord',
    cta: 'Coming Soon',
    available: false,
  },
];
---

<section id="community" class="relative py-12 sm:py-16 bg-surface-900 dark:bg-surface-900 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(228,176,45,0.1),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(212,93,60,0.08),transparent_50%)]"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-10">
      <h2 class="font-display text-3xl sm:text-4xl text-cream-50 mb-4">
        Join the <span class="text-husk-400 italic">Community</span>
      </h2>
      <p class="text-base sm:text-lg text-cream-300 leading-relaxed">
        Husk is open source and community-driven.
        Get involved, learn, and help shape the future of the language.
      </p>
    </div>

    <!-- Resource cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {resources.map((resource) => (
        <a
          href={resource.available ? resource.href : undefined}
          target={resource.external ? '_blank' : undefined}
          rel={resource.external ? 'noopener noreferrer' : undefined}
          class={`group relative bg-surface-800 rounded-xl p-6 border border-surface-700 transition-all duration-300 ${
            resource.available
              ? 'hover:border-husk-500/50 hover:bg-surface-700/50 cursor-pointer'
              : 'opacity-60 cursor-not-allowed'
          }`}
        >
          <!-- Icon -->
          <div class="w-11 h-11 rounded-lg bg-surface-700 flex items-center justify-center mb-4 group-hover:bg-husk-500/20 transition-colors duration-300">
            {resource.icon === 'book' && (
              <svg class="w-5 h-5 text-husk-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            )}
            {resource.icon === 'github' && (
              <svg class="w-5 h-5 text-husk-400" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z" />
              </svg>
            )}
            {resource.icon === 'discord' && (
              <svg class="w-5 h-5 text-surface-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="font-display text-xl text-cream-50 mb-2">
            {resource.title}
          </h3>
          <p class="text-sm text-cream-400 mb-4 leading-relaxed">
            {resource.description}
          </p>

          <!-- CTA -->
          <div class={`inline-flex items-center gap-2 font-medium ${
            resource.available ? 'text-husk-400 group-hover:text-husk-300' : 'text-surface-500'
          }`}>
            {resource.cta}
            {resource.available && (
              <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            )}
            {!resource.available && (
              <span class="px-2 py-0.5 text-xs bg-surface-700 rounded-full">Soon</span>
            )}
          </div>

          {/* Glow effect on hover */}
          {resource.available && (
            <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-gradient-to-br from-husk-500/5 to-transparent pointer-events-none"></div>
          )}
        </a>
      ))}
    </div>

    <!-- Contribute CTA -->
    <div class="mt-10 text-center">
      <p class="text-sm text-cream-400 mb-4">
        Want to contribute? Check out the
        <a href="https://github.com/fcoury/husk/blob/master/AGENTS.md" target="_blank" rel="noopener noreferrer" class="text-husk-400 hover:text-husk-300 underline underline-offset-4">
          contributing guidelines
        </a>
        to get started.
      </p>

      <!-- Star count badge -->
      <a
        href="https://github.com/fcoury/husk"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 bg-surface-800 hover:bg-surface-700 border border-surface-700 hover:border-surface-600 rounded-full text-sm transition-all duration-200"
      >
        <svg class="w-4 h-4 text-cream-300" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z" />
        </svg>
        <span class="text-cream-100 font-medium">Star on GitHub</span>
        <svg class="w-3.5 h-3.5 text-husk-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
        </svg>
      </a>
    </div>
  </div>
</section>
